@using dev.lkcode.RegistryLookup.Abstractions
@using dev.lkcode.RegistryLookup.DockerRegistryV2
<MudStack Class="ma-0">

    <MudText Typo="Typo.h6"
             Class="px-3 py-2">
        @RegistryItem.Name
    </MudText>

    <MudTabs Elevation="0"
             Rounded="true"
             ApplyEffectsToContainer="true"
             PanelClass="px-3 pt-5 pb-3">

        <MudTabPanel Text="General">
            <AppRegistryDetailGeneral/>
        </MudTabPanel>

        @if (RegistryItem is ITaggable)
        {
            <MudTabPanel Text="Tags">
                <AppRegistryDetailTags/>
            </MudTabPanel>
        }

        @if (RegistryItem is IPackagable)
        {
            <MudTabPanel Text="Tags">
                <AppRegistryDetailImages/>
            </MudTabPanel>
        }

        @if (RegistryItem is IManifestable)
        {
            <MudTabPanel Text="Tags">

            </MudTabPanel>
        }

        <MudTabPanel Text="Settings">
            <AppRegistryDetailSettings/>
        </MudTabPanel>

    </MudTabs>

</MudStack>