@using dev.lkcode.RegistryLookup.Abstractions
@using dev.lkcode.RegistryLookup.DockerRegistryV2

<MudStack Class="ma-0">

    <MudText Typo="Typo.h6"
             Class="px-3 py-2">
        @RegistryItem.Name
    </MudText>

    <MudTabs Elevation="0"
             Rounded="true"
             ApplyEffectsToContainer="true">

        <MudTabPanel Text="General">
            <AppRegistryDetailGeneral/>
        </MudTabPanel>

        @if (RegistryItem is ITaggable taggable)
        {
            <MudTabPanel Text="Tags">
                <AppRegistryDetailTags RegistryItem="RegistryItem"
                                       TaggableItem="taggable"/>
            </MudTabPanel>
        }

        @if (RegistryItem is IManifestable manifestable)
        {
            <MudTabPanel Text="Manifests">
                <AppRegistryDetailManifests/>
            </MudTabPanel>
        }

        @if (RegistryItem is IPackagable packagable)
        {
            <MudTabPanel Text="Images/Packages">
                <AppRegistryDetailImages/>
            </MudTabPanel>
        }

    </MudTabs>

</MudStack>