@inherits LayoutComponentBase

@inject IConfiguration Configuration

@* Required *@
<MudThemeProvider/>
<MudPopoverProvider/>

@* Needed for dialogs *@
<MudDialogProvider/>

@* Needed for snackbars *@
<MudSnackbarProvider/>

<MudLayout>

    <MudAppBar Elevation="1">

        <MudText Typo="Typo.h5"
                 Class="ml-3">
            Registry L00kup
        </MudText>

        <MudSpacer/>

        <MudChip T="string"
                 Label="true"
                 Icon="@Icons.Material.Filled.Info"
                 Color="Color.Info">
            Version @Configuration["Version"]
        </MudChip>

        <MudMenu Icon="@Icons.Material.Filled.MoreVert"
                 Color="Color.Inherit"
                 Edge="Edge.End"
                 AriaLabel="Open app menu">
            <MudMenuItem Target="_blank"
                         Href="https://github.com/lk-code/registry-lookup"
                         Icon="@Icons.Custom.Brands.GitHub"
                         Label="On GitHub"/>
        </MudMenu>

    </MudAppBar>

    <MudMainContent>
        @Body
    </MudMainContent>

</MudLayout>